<html lang='en'>

<head>
  <meta charset='UTF-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <title>Harmony Hub</title>
  <link rel='stylesheet' href='/css/jass.css' />
  <link rel='stylesheet' href='/css/style.css' />
  <link href="https://fonts.googleapis.com/css?family=Rock+Salt" rel="stylesheet" type="text/css" />

</head>

<body>
  <div class='flex-column justify-space-around'>
    <header class='display-flex justify-space-between align-center p-2'>
      <h1>
        <span role='img' aria-label='music'>ðŸŽµ</span>
        <a href='/'>Harmony Hub</a>
      </h1>
      <nav>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        Welcome
        {{user_name}}
        |
        <a href='/profile'>profile</a>
        |
        <button class='no-button' id='logout'>logout</button>
        {{else}}
        <a id="login" href='/login'>login</a>
        {{/if}}
      </nav>
    </header>
    <main class='container container-fluid mt-5'>
      <select id="genreDropdown">
        <option value="1313621735">United States</option>
        <option value="1362508955">Japan</option>
        <option value="1111142221">United Kingdom</option>
        <option value="3155776842">World</option>
        <option value="1111142361">Mexico</option>
        <option value="1109890291">France</option>
      </select>
      <div id="Top10Container">
        <div class="dataTable">
          <table>
            <tbody id="topten">
              <tr>
                <th>TITLE</th>
                <th>ARTIST</th>
                <th>ALBUM</th>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <!-- Render the sub layout -->
      {{{body}}}
    </main>
    <footer>

    </footer>
  </div>
  <script src="/js/songs.js"></script>
  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src='/js/logout.js'></script>

  {{/if}}
</body>

</html>